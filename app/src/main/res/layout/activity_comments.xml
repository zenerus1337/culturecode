<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentsActivity">

    <TextView
        android:id="@+id/tvCommentsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Komentarze"
        android:textSize="24sp"
        android:layout_margin="16dp"/>

    <ListView
        android:id="@+id/commentsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCommentsTitle"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/etNewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dodaj nowy komentarz"
        android:layout_below="@id/commentsListView"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnAddComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        android:layout_below="@id/etNewComment"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/btnBackToFacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PowrÃ³t do ciekawostek"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>
